node("docker") {
    docker.withRegistry('<<https://hub.docker.com/r/alandrade2002/>>', '<<alandrade2002>>') {
    
        git url: "<<https://github.com/alandrade2002/jenkins-pipeline/edit>>", credentialsId: '<<alandrade2002>>'
    
        sh "git rev-parse HEAD > .git/commit-id"
        def commit_id = readFile('.git/commit-id').trim()
        println commit_id
    
        stage "build"
        def app = docker.build "your-project-name"
    
        stage "publish"
        app.push 'master'
        app.push "${commit_id}"
    }
}
